CompileFlags:
    Add: [-xc++, -Wall, -std=c++20]
    Compiler: clang++
    CompilationDatabase: build

Diagnostics:
    UnusedIncludes: Strict

InlayHints:
    Enabled: true
    ParameterNames: true
    DeducedTypes: true

Index:
    Background: Skip
    External:
        File: ""
    StandardLibrary: Yes

Hover:
    ShowAKA: true

Style:
    UseFallbackStyle: None

Completion:
    AllScopes: No